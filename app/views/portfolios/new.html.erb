<h1>Create a new portfolio item.</h1>

<%= form_for(@portfolio_item) do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :subtitle %>
<%= f.text_field :subtitle %>

<%= f.label :body %>
<%= f.text_area :body %>

<%= f.label :main_image, "Tilføj billede" %>


<%= f.submit "Tilføj", class: "button" %>
<% end %>

<%= link_to "Gå tilbage", portfolios_path, class: "button secondary" %>

