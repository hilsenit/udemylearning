<h1>Portfolio items</h1>
<%= link_to "Opret nyt item", new_portfolio_path, class: "button warning" %>
<% @angular_portfolio_items.each_with_index do |item, num| %>
		<%= link_to show_portfolio_path(item), method: :get do %>
			<p><strong><%= item.title %></strong></p>
			<p><%= item.subtitle %></p>
			<%= image_tag item.thumb_image unless item.thumb_image.nil? %>
			<%= link_to "Rediger", edit_portfolio_path(item) %>
			<%= link_to "Slet", portfolio_path(item), method: :delete, data: { confirm: "Er du sikker?" } %>
		<% end %>
<% end %>




